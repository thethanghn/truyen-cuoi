<h1>Xiangqi</h1>
<div class="row-fluid">
    <div class="col-md-8 left-col">
        <% if @rooms.any? %>
            <ul class="rooms">
                <% @rooms.each do |item| %>
                    <li><%= item.title %></li>
                <% end %>
            </ul>
        <% else %>
            No active room
        <% end %>
    </div>
    <div class="col-md-4">
        <%= form_tag games_rooms_path, method: :post, class: 'form-new-game horizontal-form bg-info' do |f| %>
            <h4>Create a Room</h4>
            <div class="form-group">
                <textarea type="text" name="title" id="roomtitle" class="form-control" placeholder="Welcome to my room"></textarea>
                <input type="hidden" name="ope" class="ope" value="init"/>
            </div>
            <div class="form-group">
                <input type="submit" id="newgamebtn" class="btn btn-primary" value="New Game"/>
            </div>
        <% end %>
    </div>
</div>

<script type="text/jsx">
var rooms = <%= raw @rooms.to_json %>;
var RoomList = React.createClass({
    joinGameHandler: function(ev) {
        var roomId = $(ev.target).data('room');
        if (this.props.joinGameHandler) {
            this.props.joinGameHandler.call(null, roomId);
        }
    },
    renderRooms: function(){
        var rooms = this.props.rooms;
        var self = this;
        return rooms.map(function(room) {
            return <li>{room.title} - <a href="#" data-room={room.id} onClick={self.joinGameHandler}>Join</a></li>;
        });
    },
    render: function() {
        return <ul>
            {this.renderRooms()}
        </ul>;
    }
});

function joinGameHandler(roomId) {
    var url = ['/games/rooms', roomId, 'join'].join('/');
    console.log(url);
    window.location.href = url;
}

function renderRooms(rooms) {
    var menu = $(".rooms");
    React.render(<RoomList rooms={rooms} joinGameHandler={joinGameHandler}/>, menu.get(0));
}

$(function () {
    $('.form-new-game').submit(function(){
        var name = $("#roomtitle").val();
        if (!name) {
            $("#roomtitle").focus().parent().addClass('has-error');
            return false;
        }
        return true;
    });

    renderRooms(rooms);
});
</script>